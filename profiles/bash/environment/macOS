notification() {
	local title
	local msg
	case $# in
		0)
			title="ðŸ””"
			;;
		1)
			title="$1"
			;;
		2)
			title="$1"
			msg="$2"
			;;
	esac
	osascript -e "display notification \"$msg\" with title \"$title\""
}

time-notification () {
	local command="$@";
	local time_out="$(time "$@" 2>&1)"
	notification "$command" "$time_out"
}
