notification() {
	local msg="$1"
	if [[ -z "$msg" ]]; then
		echo "No message provided, defaulting to ðŸ””"
		msg="ðŸ””"
	fi
	local title=${2:-notification}
	osascript -e "display notification \"$msg\" with title \"$title\""
}

time-notification () {
	local command="$@";
	local time_out="$(time "$@" 2>&1)"
	osascript -e "display notification \"$time_out\" with title \"$command\""
}
